\frametitle{ The pipe }
\begin{center}
\begin{tabular}{rcl}
\verb;x |> f(y); & $\Leftrightarrow$ & \verb;f(x, y);\\
\verb;x |> f(y) |> g(z); & $\Leftrightarrow$ & \verb;g(f(x, y), z);\\
\end{tabular}
\end{center}
\vfill

\begin{verbatim}
flights |>
  filter(dest == "IAH") |>
  group_by(year, month, day) |>
  summarize(
    arr_delay = mean(arr_delay, na.rm = TRUE)
  )
\end{verbatim}
